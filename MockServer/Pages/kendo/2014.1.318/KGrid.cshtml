@model MockServer.Pages.kendo._2014._1._318.KGridModel
@{
    Layout = "~/Pages/kendo/2014.1.318/Shared/_Layout.cshtml";
}
<div id="grid"></div>
<script>
    $(function () {
        var dataSource = new kendo.data.DataSource({
            data: [
                { id: 1, name: "Jane Doe", age: 30 },
                { id: 2, name: "John Doe", age: 33 },
                { id: 3, name: "Tom", age: 29 },
                { id: 4, name: "Bob", age: 34 },
                { id: 5, name: "Sarah", age: 35 },
                { id: 6, name: "Alex", age: 44 },
                { id: 7, name: "Tim", age: 43 },
                { id: 8, name: "Cook", age: 54 },
                { id: 9, name: "Bleu", age: 21 },
                { id: 10, name: "Washington", age: 41 },
                { id: 11, name: "Jefferson", age: 85 },
                { id: 12, name: "Adams", age: 34 },
                { id: 13, name: "Walker", age: 55 },
                { id: 14, name: "Cook", age: 58 },
            ],
            pageSize: 2
        });

        $("#grid").kendoGrid({
            columns: [
                { field: "name" },
                { field: "age" }
            ],
            dataSource: dataSource,
            editable: true,
            pageable: {
                pageSizes: [
                    2,
                    5,
                    10
                ],
                refresh: true
            }
        });
    });
</script>
