@page
@model MockServer.Pages.kendo._2014._1._318.KPagerModel
@{
    Layout = "~/Pages/kendo/2014.1.318/Shared/_Layout.cshtml";
}
<div id="pager"></div>
<script>
    $(function () {
        var dataSource = new kendo.data.DataSource({
            data: [
                { productName: "Tea", category: "Beverages" },
                { productName: "Coffee", category: "Beverages" },
                { productName: "Ham", category: "Food" },
                { productName: "Bread", category: "Food" }
            ],
            pageSize: 2
        });

        $("#pager").kendoPager({
            dataSource: dataSource,
            refresh: true,
            pageSizes: [ 2, 4 ]
        });

        dataSource.read();
    });
</script>
