@page
@model IndexModel
<h2>Frameworks</h2>
@foreach (var framework in Model.Frameworks)
{
    <div class="card framework">
        <div class="card-header text-white bg-dark">
            <h3 class="card-title framework-name">@framework.Name</h3>
        </div>
        <div class="card-body">
            <div id="framework-@framework.Name" class="accoridan" role="tablist" aria-multiselectable="false">
                @foreach (var version in framework.GetVersions())
                {
                    var versionStr = version.Replace('.', '_');
                    <div class="card framework-version-header">
                        <div class="card-header bg-light" role="tab" id="heading-for-@versionStr">
                            <button type="button" class="framework-version btn btn-link" data-toggle="collapse" data-parent="framework-@framework.Name" href="#version-@versionStr">
                                @version
                            </button>
                        </div>
                    </div>
                    <div id="version-@versionStr" class="collapse show framework-version-body" role="tabpanel" aria-labelledby="heading-for-@versionStr">
                        <ul class="list-group">
                            @foreach (var href in framework.VersionPathMap[version])
                            {
                                var pathName = System.IO.Path.GetFileNameWithoutExtension(href);
                                <li class="list-group-item framework-version-path">
                                    <a href="@href" class="btn btn-link">@pathName</a>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
}
